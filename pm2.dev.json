{
  "apps": [
    {
      "name": "node-i18n-error",
      "script": "build/server.js",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      },
      "watch": ["build"],
      "watch_options": {
        "followSymlinks": false
      },
      "ignore_watch": ["node_modules", "logs", "static", "script", ".idea", ".git"],
      "autorestart": true,
      "max_memory_restart": "250M",
      "listen_timeout": 8000,
      "kill_timeout": 1600
    }
  ]
}
