{
  "apps": [
    {
      "name": "i18nerr",
      "script": "build/server.js",
      "instances": 2,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "development",
        "production": false,
        "PORT": 6088
      },
      "watch_options": {
        "followSymlinks": false
      },
      "ignore_watch": ["node_modules"],
      "autorestart": true,
      "max_memory_restart": "250M"
    }
  ]
}
